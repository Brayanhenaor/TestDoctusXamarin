<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Crear Tip"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:services="clr-namespace:DoctusTest.Services"
    services:Locator.AutoWireViewModel="True"
    x:Class="DoctusTest.Views.AddTipView">
    <ContentPage.Content>
        <Grid
            Margin="20"
            RowSpacing="10"
            RowDefinitions="Auto,Auto,Auto,Auto">
            <DatePicker
                MinimumDate="{Static sys:DateTime.Now}"
                Date="{Binding Date}"/>

            <Entry
                Placeholder="Titulo"
                Text="{Binding Title}"
                Grid.Row="1"/>

            <Editor
                Placeholder="Descripcion"
                Text="{Binding Description}"
                Grid.Row="2"
                HeightRequest="100"/>

            <Button
                Grid.Row="3"
                HorizontalOptions="Center"
                Command="{Binding SaveCommand}"
                Text="Guardar"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
